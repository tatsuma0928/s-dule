%h1 予定一覧

%table
  %thead
    %tr
      %th 予定
      %th 内容
      %th 開始時間
      %th 終了時間
      %th
      %th
      %th

  %tbody
    - @events.each do |event|
      %tr
        %td= event.title
        %td= event.body
        %td= event.start_date.strftime("%Y-%m-%d %H:%M")
        %td= event.end_date.strftime("%Y-%m-%d %H:%M")
        %td= link_to '一覧', event
        %td= link_to '編集', edit_event_path(event)
        %td= link_to '削除', event, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to '新規予定', new_event_path
= link_to "ログアウト", destroy_user_session_path, method: :delete